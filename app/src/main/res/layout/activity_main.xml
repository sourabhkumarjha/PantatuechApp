<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#797777"
    tools:context="com.example.us74.pantatuechapp.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:weightSum="1">


        <ImageView
            android:layout_marginTop="5dp"
            android:id="@+id/ImageView"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Pentateuch Technology"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="21dp"
            />


        <TextView
            android:id="@+id/textview2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="&quot;your passion is our goal&quot;"
            android:textColor="#Fff"
            />


        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>


      <android.support.constraint.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          tools:context="com.example.us74.pantatuechapp.MainActivity">


          <TextView
              android:id="@+id/textabout"
              android:layout_width="368dp"
              android:layout_height="0dp"
              android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toBottomOf="parent"
              android:text="fdsafdsafdsafdsafdsfdsafdsfdsfds"
              />




      </android.support.constraint.ConstraintLayout>







        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/ic_demo"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            app:ci_gravity="bottom"
            app:ci_height="8dp"
            app:ci_orientation="horizontal"

            app:ci_width="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >
        </me.relex.circleindicator.CircleIndicator>

    </LinearLayout>








</RelativeLayout>


